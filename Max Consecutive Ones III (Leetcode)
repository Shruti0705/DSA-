class Solution {
    public int longestOnes(int[] nums, int k) {
        int st=0;
        int end=0;
        int c=0;
        int ans=0;

        while(end < nums.length)
        {
            if(nums[end] == 1)
            {
                ans = Math.max(ans, end-st+1);
                end++;
            }
            else{
                c++;
                while(st <= end && c > k)
                {
                    if(nums[st] == 0)
                        c--;
                    st++;
                }
                
                ans = Math.max(ans, end-st+1);
                end++;
            }
           
        }
        return ans;
    }
}
